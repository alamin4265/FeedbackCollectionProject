<script type="text/x-template" id="post-template">
    <div class="row" style="padding-left:5px">
        <div class="col-4">{{data.comments}}</div>
        <div class="col-2">{{data.commentedBy}}</div>
        <div class="col-2">{{ChangeDateFormate(data.date)}}</div>
        <div class="col-1">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="color:green">
                <path fill-rule="evenodd" d="M4 0h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H4z" />
                <path fill-rule="evenodd" d="M8 11a.5.5 0 0 0 .5-.5V6.707l1.146 1.147a.5.5 0 0 0 .708-.708l-2-2a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L7.5 6.707V10.5a.5.5 0 0 0 .5.5z" />
            </svg>
            {{data.upVote}}
        </div>
        <div class="col-1">
            <span class="glyphicon glyphicon-chevron-up"></span>
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="color:red">
                <path fill-rule="evenodd" d="M4 0h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H4z" />
                <path fill-rule="evenodd" d="M8 5a.5.5 0 0 1 .5.5v3.793l1.146-1.147a.5.5 0 0 1 .708.708l-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 9.293V5.5A.5.5 0 0 1 8 5z" />
            </svg>
            {{data.downVote}}
        </div>
    </div>
</script>

<script type="text/javascript">
    Vue.component('blog-post', {
        props: ['data'],
        template: '#post-template',
        methods: {
            ChangeDateFormate(data) {
                return this.$parent.ChangeDateFormate(data);
            }
        }
    });
</script>